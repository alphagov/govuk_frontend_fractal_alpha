 <div class="form-group">
  <fieldset>
    <legend class="heading-medium">{{ questionText }}</legend>
    {% for option in options %}
    <label class="block-label" for="{{ id }}-{{ option.value }}">
      <input id="{{ id }}-{{ option.value }}" type="radio" name="{{ id }}" value="{{ option.value }}">
      {{ option.label }}
    </label>
    {% endfor %}
  </fieldset>
 </div>